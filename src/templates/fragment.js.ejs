<core:FragmentDefinition 
	xmlns:core="sap.ui.core" 
	xmlns="sap.m">
	
	<Dialog	
		title="{i18n>Commom.<%= props.name %>}">
		<content>
			<VBox class="sapUiSmallMargin" >			
				<Label text="{i18n>Commom.<%= props.name %>}" />
				<Input value="{/Descricao}" required="true" placeholder="Inserir <%= props.name %>" />
			</VBox>
			
		</content>
		<footer>
			<Toolbar>
				<content>	
					<ToolbarSpacer></ToolbarSpacer>			
					<Button type="Accept"
							text="{i18n>Commom.Save}"
							press=".closeDialog" />
					<Button id="Reject"
						text="{i18n>Commom.Cancel}"
						type="Reject"
						press=".closeDialog"
						/>
				</content>
			</Toolbar>
		</footer>
	</Dialog>
	
</core:FragmentDefinition>
