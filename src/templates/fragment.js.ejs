<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:edts="sicap-controls.editors" 
	xmlns:core="sap.ui.core" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout">
    <edts:SICAPDialog 
		titleAlignment="Start" 
		title="{i18n>Title.Registration}" 
		draggable="true" 
		contentWidth="{const>/dialogContentMedium/contentWidth}" 
		showHeader="true" 
		type="Standard">
        <edts:content>
			<VBox class="sapUiSmallMargin">
				<f:Form editable="true">
					<f:layout>
						<f:ResponsiveGridLayout
							labelSpanXL="3"
							labelSpanL="4"
							labelSpanM="{const>/dialogContentHuge/labelSpanM}"
							labelSpanS="12"
							adjustLabelSpan="true"
							emptySpanXL="0"
							emptySpanL="0"
							emptySpanM="0"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							breakpointM="{const>/dialogContentMedium/breakpointM}"
							singleContainerFullSize="true" />
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="{i18n>Title.Description}">
									<f:fields>
										<FlexBox>
											<items>
												<Input enabled="{= (${controlModel>/Adicionar} &amp;&amp; ${controlModel>/EmCriacao}) || ${controlModel>/Editar}}" width="100%" value="{/Descricao}">
													<layoutData>
														<FlexItemData maxWidth="200px" growFactor="1"/>
													</layoutData>
												</Input>
											</items>
										</FlexBox>
									</f:fields>
								</f:FormElement>																
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
        </edts:content>
        <edts:beginButton>
			<edts:SICAPButton class="sapUiTinyMarginEnd" activeIcon="" enabled="{= (${controlModel>/Adicionar} &amp;&amp; ${controlModel>/EmCriacao}) || ${controlModel>/Editar}}" icon="" iconDensityAware="true" iconFirst="true" text="{i18n>Action.Save}" press="onSavePress" textDirection="Inherit" type="Accept" />
		</edts:beginButton>
		<edts:endButton>
			<Button class="sapUiTinyMarginEnd" activeIcon="" enabled="true" icon="" iconDensityAware="true" iconFirst="true" text="{i18n>Action.Cancel}" press="onDialogCancelPressAndDestroy" textDirection="Inherit" type="Reject" />
		</edts:endButton>
    </edts:SICAPDialog>
</core:FragmentDefinition>

